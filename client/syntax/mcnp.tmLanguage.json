{
    "version": "",
    "name": "MCNP",
    "scopeName": "source.mcnp",
    "patterns": [{
        "include": "#line"
    }],
    "repository": {

        "line": {
            "patterns": [
				{
					"include": "#full_line_comment"					
				},			
				{
					"include": "#data_card"
				}
            ]
		},		

		"full_line_comment": {
			"patterns": 
			[
                {					
					"name": "comment.line.double-slash.mcnp",
					"match": "^[ ]{0,4}(c|C)( .*\\n|\\n)",					
					"contentName": "comment.line.comment.mcnp"					
				}           
            ]
		},
		"data_card": {
			"patterns": 
			[
                {	
					"begin": "^ {0,4}[*+]?(?i)([[:alpha:]]\\S+)",
					"end":"\n",				
					"contentName": "entity.line.data_card.mcnp",					
					"patterns":
					[
						 {"include": "#arguments"}
					],
					"captures":
					{
						"1": {"name":"invalid.illegal"}
					}					
				}
			]
		},
		"arguments": {
			"patterns": 
			[
                {					
					"name": "comment.line.double-slash.mcnp",
					"match": "\\$(.*)"								
				},
				{					
					"name": "entity.name.type.mcnp",
					"match": "FMESH114:n"								
				}
			]
		}
	}        
}