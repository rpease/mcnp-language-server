{
    "version": "",
    "name": "MCNP",
    "scopeName": "source.mcnp",
    "patterns": [{
        "include": "#line"
    }],
    "repository": {

        "line": {
            "patterns": [
				{
					"include": "#full_line_comment"					
				},			
				{
					"include": "#data_card"
				}
            ]
		},		

		"full_line_comment": {
			"patterns": 
			[
                {					
					"name": "comment.line.double-slash.mcnp",
					"match": "^[ ]{0,4}(c|C)( .*\\n|\\n)",					
					"contentName": "comment.line.comment.mcnp"					
				}           
            ]
		},
		"data_card": {
			"patterns": 
			[
                {	
					"match": "^ {0,4}[*+]?(?i)([[:alpha:]]\\S+)(\\s.*)",				
					"contentName": "entity.line.data_card.mcnp",
					"captures": 
					{
						"1": { "name": "entity.name.type.mcnp"},
						"2": { "include": "#arguments"}
					}					
				}
			]
		},
		"arguments": {
			"patterns": 
			[
                {					
					"name": "comment.line.double-slash.mcnp",
					"match": "\\$(.*)"								
				}
			]
		}
	}        
}