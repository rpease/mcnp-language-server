{
    "version": "",
    "name": "MCNP",
    "scopeName": "source.mcnp",
    "patterns": [{
        "include": "#line"
    }],
    "repository": {

        "line": {
            "patterns": [
				{
					"include": "#title"
				},
				{
					"include": "#comment"					
				},
                {
					"include": "#statement"					
				}				
            ]
		},

		"title": {
			"name": "entity.title.mcnp",
			"match": "^\\A(.*)$",
			"captures": {
				"1": {"name":"entity.other.section.mcnp"} 
			}
		},	

		"comment": {
			"patterns": 
			[
                {					
					"name": "comment.line.double-slash.mcnp",
					"begin": "(^[ ]{0,5})(c|C)",
					"beginCaptures": {
						"1": {
							"name": "punctuation.whitespace.comment.leading.mcnp"
						},
						"2": {
							"name": "comment.line.c.mcnp"
						}
					},
					"contentName": "comment.line.comment.mcnp",
					"end": "\\n"
					
				},
				{					
					"name": "comment.line.double-slash.mcnp",
					"match": "\\$(.*)$"								
				}            
            ]
		},

		"statement": {
			"match":"(^.*?)[\\n\\$]",
			"captures": {
				"1": {"name":"support.function.mcnp"} 
			},	
			"patterns":
			{

			}			
		}
	}        
}