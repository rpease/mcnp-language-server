{
    "version": "",
    "name": "MCNP",
    "scopeName": "source.mcnp",
    "patterns": [{
        "include": "#statments"
    }],
    "repository": {

		"statments": 
		{
			"patterns": 
			[
				{
					"include": "#full_line_comment"					
				},
				{
					"include": "#statement_begin"
				},
				{
					"include": "#statement_extension"
				}
            ]
		},		

		"full_line_comment": {
			"patterns": 
			[
                {					
					"name": "comment.line.double-slash.mcnp",
					"match": "^[ ]{0,4}(c|C)( .*\\n|\\n)",					
					"contentName": "comment.line.mcnp"					
				}           
            ]
		},

		"statement_begin": 
		{
			"patterns": 
			[        
				{"include": "#cell_card"},
				{"include": "#surface_card"},        					
				{"include": "#data_card"}
            ]
		},

		"statement_extension": 
		{
			"patterns": 
			[
                {					
					"name":"markup.italic",
					"begin": "^ {5,}\\S+",
					"end": "\n",					
					"contentName": "entity.statement.extension.mcnp",
					"patterns":
					[
						 {"include": "#inline_comment"}
					]					
				}           
            ]
		},		

		"data_card": {
			"patterns": 
			[
                {	
					"begin": "^ {0,4}[*+]?(?i)([[:alpha:]]\\S+)",
					"end": "\n",							
					"contentName": "entity.line.data_card.mcnp",					
					"captures":
					{
						"1": {"name":"invalid.illegal"}
					},
					"patterns":
					[
						 {"include": "#inline_comment"}
					]					
				}
			]
		},

		"surface_card": {
			"patterns": 
			[
                {	
					"begin": "^ {0,4}(\\d+) (\\d )?([[:alpha:]]\\S+)",
					"end": "\n",							
					"contentName": "entity.line.data_card.mcnp",					
					"captures":
					{
						"3": {"name":"invalid.illegal"}
					},
					"patterns":
					[
						 {"include": "#inline_comment"}
					]
				}
			]
		},

		"inline_comment":
		{
			"patterns": 
			[
                {					
					"name": "comment.line.double-slash.mcnp",
					"match": "\\$(.*)",
					"contentName": "comment.inline.mcnp"								
				}          
            ]
		}		
	}        
}