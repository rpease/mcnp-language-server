{
    "version": "",
    "name": "MCNP",
    "scopeName": "source.mcnp",
    "patterns": [{
        "include": "#line"
    }],
    "repository": {

        "line": {
            "patterns": [
                {
					"include": "#statement"					
				},
				{
					"include": "#comment"					
				}
            ]
		},

		"statement": {
			"name": "support.class.mcnp",
			"begin": "^",
			"beginCaptures": {
			},
			"contentName": "entity.name.function.mcnp",
			"end": "(\\n|\\$)"
		},

		"comment": {
			"patterns": 
			[
                {					
					"name": "comment.line.double-slash.mcnp",
					"begin": "(^[ ]{0,5})(c|C)",
					"beginCaptures": {
						"1": {
							"name": "punctuation.whitespace.comment.leading.mcnp"
						},
						"2": {
							"name": "comment.line.c.mcnp"
						}
					},
					"contentName": "comment.line.comment.mcnp",
					"end": "\\n"
					
				},
				{					
					"name": "comment.line.double-slash.mcnp",
					"begin": "(\\$)",
					"beginCaptures": {
						"1": {
							"name": "punctuation.whitespace.comment.leading.mcnp"
						},
						"2": {
							"name": "comment.line.c.mcnp"
						}
					},
					"contentName": "comment.line.comment.mcnp",
					"end": "\\n"					
				}            
            ]

            
		}
	}        
}