{
    "version": "",
    "name": "MCNP",
    "scopeName": "source.mcnp",
    "patterns": [{
        "include": "#statments"
    }],
    "repository": {

		"statments": 
		{
			"patterns": 
			[
				{
					"include": "#full_line_comment"					
				},
				{
					"include": "#statement_begin"
				},
				{
					"include": "#statement_extension"
				}
            ]
		},		

		"full_line_comment": {
			"patterns": 
			[
                {					
					"name": "comment.line.double-slash.mcnp",
					"match": "^[ ]{0,4}(c|C)( .*\\n|\\n)",					
					"contentName": "comment.line.mcnp"					
				}           
            ]
		},

		"statement_begin": 
		{
			"patterns": 
			[
                {					
					"name":"invalid.illegal",					
					"begin": "^ {0,4}\\S+",
					"end": "\n",				
					"contentName": "entity.statement.begin.mcnp",
					"patterns":
					[
						 {"include": "#inline_comment"},
						 {"include": "#data_card"}
					]					
				}           
            ]
		},

		"statement_extension": 
		{
			"patterns": 
			[
                {					
					"name":"markup.italic",
					"begin": "^ {5,}\\S+",
					"end": "\n",					
					"contentName": "entity.statement.extension.mcnp",
					"patterns":
					[
						 {"include": "#inline_comment"}
					]					
				}           
            ]
		},

		"inline_comment":
		{
			"patterns": 
			[
                {					
					"name": "comment.line.double-slash.mcnp",
					"match": "\\$(.*)",
					"contentName": "comment.inline.mcnp"								
				}          
            ]
		},

		"data_card": {
			"patterns": 
			[
                {	
					"match": "[*+]?(?i)([[:alpha:]]\\S+)",							
					"contentName": "entity.line.data_card.mcnp",					
					"captures":
					{
						"1": {"name":"invalid.illegal"}
					}					
				}
			]
		}
	}        
}